<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"
        >
        <layer-list>
            <item  android:left="10dp" android:right="10dp">

                <shape android:shape="rectangle">
                    <solid android:color="@color/gl_tab_selected_color" />
                </shape>
            </item>

            <item android:top="-7dp" android:bottom="3dp" android:left="-7dp" android:right="-7dp">
                <shape
                    android:shape="rectangle">
                    <padding android:left="10dp"

                        android:right="10dp"
                        android:bottom="10dp"
                        android:top="10dp"
                        />
                    <solid android:color="#2e373e" />
                </shape>
            </item>
        </layer-list>

    </item>



    <item android:state_activated="true"
        android:state_active="true"
        >
        <layer-list>
            <item  android:left="30dp" android:right="30dp">

                <shape android:shape="rectangle">
                    <solid android:color="@color/gl_tab_selected_color" />
                </shape>
            </item>

            <item android:top="-7dp" android:bottom="3dp" android:left="-7dp" android:right="-7dp">
                <shape
                    android:shape="rectangle">
                    <padding android:left="10dp"
                        android:bottom="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        />
                    <solid android:color="#2e373e" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>



</selector>
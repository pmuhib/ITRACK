<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <TextView

        android:id="@+id/tvEmployeeSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/search_icon"
        android:drawableEnd="@drawable/search_icon"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:layout_toLeftOf="@+id/tvEmployeeSearch"
        android:layout_toStartOf="@+id/tvEmployeeSearch"
        android:id="@+id/etEmployeeName"
        style="@style/GLAppEditTextTheme"
        android:layout_width="match_parent"
        android:hint="@string/client_emp_name"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_below="@id/etEmployeeName"
        style="@style/DividerTheme"/>





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >

    <TextView
        android:id="@+id/txt_CompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambey"
        android:layout_margin="5dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#f8c561"/>

    <com.client.itrack.utility.CircleImageView

        android:layout_below="@+id/txt_CompanyName"
        android:id="@+id/Im_imageicon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:src="@drawable/circledefault" />
    <ImageView
        android:id="@+id/immNextArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/next_arrow"/>

    <TextView
        android:id="@+id/txt_clientcode"
        android:layout_below="@+id/txt_CompanyName"
        android:layout_toRightOf="@+id/Im_imageicon"
        android:layout_toLeftOf="@+id/ivNextArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Client Code"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:textColor="#d9d9d9"/>
    <TextView
        android:id="@+id/txt_comPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#d9d9d9"
        android:layout_below="@+id/txt_clientcode"
        android:layout_toRightOf="@+id/Im_imageicon"
        android:layout_toLeftOf="@+id/ivNextArrow"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:text="Phone"/>


    <TextView
        android:id="@+id/txt_compaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#d9d9d9"
        android:layout_below="@+id/txt_comPhone"
        android:layout_toRightOf="@+id/Im_imageicon"
        android:layout_toLeftOf="@+id/ivNextArrow"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:text="Address"/>

</RelativeLayout>







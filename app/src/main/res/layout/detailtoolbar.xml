<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_height="@dimen/toolbar_height"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@color/gl_toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/btn_navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:background="?attr/selectableItemBackground"
            />

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="200dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:text="@string/global_txt"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="22sp"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_navigation"
            android:layout_toRightOf="@id/btn_navigation"
            android:gravity="left"/>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flag"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/txt_heading"
            android:layout_toEndOf="@+id/txt_heading"
            android:layout_centerVertical="true"
          />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/client_detail_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackground"

                />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/navigationdot"
                android:background="@drawable/rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN"
                android:textSize="16sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"/>
            <!--<ImageView-->
                <!--android:id="@+id/navigationdot"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/flag"-->
                <!--android:paddingRight="5dp"-->
                <!--android:paddingEnd="5dp"-->
                <!--/>-->

            <ImageView
                android:id="@+id/client_detail_more_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/navigation_dot_icon"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="?attr/selectableItemBackground"
                />
        </LinearLayout>


    </RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/gl_tab_host_bg_color"
        android:gravity="center"
        android:id="@+id/tvDFTCategoryTitle"
        android:padding="5dp"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Income Total"/>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="5dp"
        android:layout_below="@+id/tvDFTCategoryTitle"
        android:id="@+id/recyclerPaymentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:visibility="gone"
        android:layout_below="@+id/tvDFTCategoryTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvDFTDate"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        style="@style/GLButtonWhite"
        android:text="10-12-2016"
        />

</RelativeLayout>
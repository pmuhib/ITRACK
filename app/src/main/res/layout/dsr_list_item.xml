<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivDsrColorScheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_v_line"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/ivDsr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dsr_list_icn" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >

        <TextView
            android:id="@+id/tvComapnyDSRName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="jhjhjhj"
            android:textStyle="bold"
            android:textColor="@color/gl_lbl_bold_txt_color"
            android:textSize="20sp" />

        <TextView
            android:layout_below="@+id/tvComapnyDSRName"
            android:id="@+id/tvDsrCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="jhjjdh"
            android:textColor="#d9d9d9"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/tvDsrCreatedDate"
            android:id="@+id/lblCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Created By - "
            android:textColor="@color/gl_lbl_bold_txt_color"
            android:layout_marginLeft="10dp"

             />
        <TextView
            android:layout_below="@+id/tvDsrCreatedDate"
            android:layout_toRightOf="@+id/lblCreatedBy"
            android:id="@+id/tvCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="#d9d9d9"

             />


    </RelativeLayout>


</LinearLayout>

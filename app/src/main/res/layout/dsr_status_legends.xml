<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_below="@+id/block1"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/white_legend"
                android:drawableLeft="@drawable/white_legend"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="New"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/lime_green_legend"
                android:drawableLeft="@drawable/lime_green_legend"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:text="Closed"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/yellow_legend"
                android:drawableLeft="@drawable/yellow_legend"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:text="Partial"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/red_legend"
                android:drawableLeft="@drawable/red_legend"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:text="Pending"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gl_background"
    android:weightSum="100"
    android:orientation="vertical">

    <include layout="@layout/itrack_header_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle"
        >

        <EditText
            android:id="@+id/etxt_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Username"
            android:text="Deepak"
            android:gravity="left|center_vertical"
            android:background="@null"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginLeft="45dp"
            android:textColorHint="#A1B3BC"
            android:textColor="#A1B3BC" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/user" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rectangle" >

        <EditText
            android:id="@+id/etxt_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:background="@null"
            android:hint="Password"
            android:text="y28gphP"
            android:layout_marginLeft="45dp"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColorHint="#A1B3BC"
            android:textColor="#A1B3BC" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/lock" />
    </RelativeLayout>




    <TextView
        android:id="@+id/txt_forgotpwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:text="Forgot Your Passsword ?"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"/>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Login"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/btnrectangle"
                android:gravity="center"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/btnrectangle">
                <ImageView
                    android:id="@+id/signup_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/sign_up"/>
                <TextView
                    android:id="@+id/txt_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/signup_icon"
                    android:layout_toEndOf="@+id/signup_icon"
                    android:paddingLeft="10dp"
                    android:text="Sign up"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:gravity="center|left"
                    />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txt_skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SKIP"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/btnwhiterectangle"
            android:gravity="center"/>

    </RelativeLayout>


</LinearLayout>

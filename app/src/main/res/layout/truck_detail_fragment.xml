                style="@style/GLLblNormalStyle"
                android:layout_width="wrap_content"
                android:layout_below="@id/tvDetention"
                android:layout_toEndOf="@+id/lblDetentionDaysForClient"
                android:layout_toRightOf="@+id/lblDetentionDaysForClient" />

            <View
                style="@style/DividerTheme"
                android:layout_below="@+id/tvDetentionForClient" />

            <TextView
                android:id="@+id/lblCost"
                style="@style/GLLblBoldStyle"
                android:layout_width="160dp"
                android:layout_below="@id/tvDetentionForClient"
                android:gravity="center_vertical"
                android:text="@string/cost" />
            <GridLayout
                android:columnCount="2"
                android:id="@+id/additionalCostContainer"
                android:layout_below="@id/tvDetentionForClient"
                android:layout_toEndOf="@+id/lblCost"
                android:layout_toRightOf="@+id/lblCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:minHeight="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvForCost"
                    style="@style/GLLblNormalStyle"
                    android:layout_width="wrap_content"

                    />
                <TextView

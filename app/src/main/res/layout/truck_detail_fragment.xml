                style="@style/GLLblBoldStyle"
                android:layout_width="160dp"
                android:layout_below="@id/additionalCostContainer"
                android:text="@string/cost_client" />

            <GridLayout
                android:columnCount="2"
                android:id="@+id/additionalClientCostContainer"
                android:layout_below="@id/additionalCostContainer"
                android:layout_toEndOf="@+id/lblCostClient"
                android:layout_toRightOf="@+id/lblCostClient"
